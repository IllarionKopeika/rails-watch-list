<div class="container">
  <div class="justify-content-around row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="card" style="width: 18rem;">
      <img src="https://www.asifa-hollywood.org/wp-content/uploads/2015/05/news-asifa-hollywood-film-1024x555-1160x665.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h2 class="card-title"><%= @list.name %></h2>
          <% @list.bookmarks.each do |bookmark| %>
            <h4 class="card-title">
              <%= bookmark.movie.title %>
              <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                <i class="fa-solid fa-delete-left"></i>
              <% end %>
              </h4>
              <p class="card-text"><%= bookmark.comment %></p>
          <% end %>
          <%= link_to "Back", lists_path, class: "btn btn-outline-secondary" %>
          <%= link_to "Delete", list_path(@list), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
