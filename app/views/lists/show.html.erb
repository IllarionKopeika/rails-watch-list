<div class="container">
  <div class="justify-content-center row">
    <div class="col-sm-8 col-sm-offset-2">
      <h2><%= @list.name %></h2>
      <% @list.bookmarks.each do |bookmark| %>
        <h4>
          <%= bookmark.movie.title %>
          <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-delete-left"></i>
          <% end %>
          </h4>
          <p><%= bookmark.comment %></p>
      <% end %>
      <%= link_to "Back", lists_path, class: "btn btn-outline-secondary" %>
      <%= link_to "Delete List", list_path(@list), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
