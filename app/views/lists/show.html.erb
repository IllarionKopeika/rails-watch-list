<div class="container">
  <div class="justify-content-center row">
    <div class="col-sm-8 col-sm-offset-2">
      <h2><%= @list.name %></h2>
      <% @list.movies.each do |movie| %>
        <h2><%= movie.title %></h2>
        <% movie.bookmarks.each do |bookmark| %>
          <% if bookmark.list == @list %>
            <p><%= bookmark.comment %></p>
          <% end %>
        <% end %>
      <% end %>
      <%= link_to "Back", lists_path, class: "btn btn-outline-secondary" %>
      <%= link_to "New bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
